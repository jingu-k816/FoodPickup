  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
</head>

<body>
  <header>
    <%- include('partials/_navbar') %>
  </header>
  <div class="register">
    <h2 class="login_header">Register</h2>
    <form class="input-form" action="/register" method="POST">
      <div class="input_area">
        <lable>Name:
          <input name="name" type="text" class="name" placeholder="Your name">
        </lable>
        <lable>Phone Number:
          <input type="number" type="tel" name="phone_number" class="number" placeholder="Your phone number">
        </lable>
        <lable for="password">Password:
          <input name="password" type="password" class="password" placeholder="Your password">
        </lable>
        <button type="submit" class="btn btn-primary">Register</button>
      </div>
    </form>
  </div>

</body>

</html>
